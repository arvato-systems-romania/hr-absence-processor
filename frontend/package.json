{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.11.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "npm run build && electron .",
    "electron-build": "npm run build && electron-builder --dir",
    "electron-dist": "npm run build && electron-builder --win --x64"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.6.4"
  },
  "main": "electron.js",
  "build": {
    "extends": [],
    "appId": "org.hrprocessor.frontend",
    "productName": "HR Absence Processor",
    "directories": {
      "buildResources": "public"
    },
    "files": [
      "build/**/*",
      "electron.js"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  },
  "description": "HR Absence Processor desktop frontend built with React and Electron.",
  "author": "Costel Aldea <constantin.aldea@bertelsmann.de>",
  "homepage": "."
}
